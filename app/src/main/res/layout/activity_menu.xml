<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pennappsxv.czaremba.pennappsxv.MenuActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:padding = "0dp"
    android:weightSum="1"
    android:background="@drawable/background">


    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/button2"
        android:layout_marginBottom="36dp"
        android:id="@+id/donateButton"
        android:onClick="startDonate"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/diabetic_final"
        android:id="@+id/diabetic_button"
        android:onClick="startDonate"
        android:layout_above="@+id/donateButton"
        android:layout_alignStart="@+id/donateButton"
        android:layout_marginBottom="18dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/glaucoma_final"
        android:id="@+id/glaucoma_button"
        android:onClick="startDonate"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/colourblind_final"
        android:layout_alignStart="@+id/diabetic_button" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/colourblind_final"
        android:id="@+id/colourblind_final"
        android:onClick="startDonate"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/diabetic_button"
        android:layout_alignStart="@+id/diabetic_button" />


</RelativeLayout>
