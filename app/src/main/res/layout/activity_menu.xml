<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pennappsxv.czaremba.pennappsxv.MenuActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    android:padding = "0dp"
    android:weightSum="1"
    android:background="@drawable/background">

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/button2"
        android:layout_marginBottom="36dp"
        android:id="@+id/donateButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/vrExperience" />

    <Button
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:id="@+id/vrExperience"
        android:background="@drawable/button1"
        android:layout_marginBottom="42dp"
        android:onClick="startVR"
        android:layout_above="@+id/donateButton"
        android:layout_centerHorizontal="true" />
    
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:id="@+id/glaucomaButton"
        android:background="@drawable/diabetic"
        android:visibility="invisible"
        android:enabled="false"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:id="@+id/diabeticButton"
        android:background="@drawable/glaucoma"
        android:visibility="invisible"
        android:enabled="false"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/colourblindnessButton"
        android:background="@drawable/colourblind"
        android:visibility="invisible"
        android:enabled="false"
        android:layout_alignBaseline="@+id/diabeticButton"
        android:layout_alignBottom="@+id/diabeticButton"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
